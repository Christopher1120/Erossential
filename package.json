{
  "name": "erossential",
  "version": "1.0.29",
  "description": "Erossential",
  "main": "main.js",
  "author": "Christopher Cruz",
  "respository": {
    "provider": "git",
    "url": "https://github.com/Christopher1120/Erossential"
  },
  "devDependencies": {
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.21.0",
    "webpack": "^5.89.0"
  },
  "eslintConfig": {},
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dates-between": "^5.0.0",
    "ejs": "^3.1.9",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "init": "^0.1.2",
    "moment": "^2.29.4",
    "mongoose": "^6.7.0",
    "node": "^21.2.0",
    "nodemailer": "^6.9.7",
    "nodemon": "^3.0.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pdfkit": "^0.14.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "devv": "electron main.js",
    "dist": "electron-builder --win --publish always",
    "build:publish": "electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.erossential.app",
    "productName": "Erossential Business Management",
    "buildNumber": "1",
    "win": {
      "target": "NSIS",
      "icon": "images/app.png",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "artifactName": "${productName} Setup ${version}.${buildNumber}.exe",
      "uninstallDisplayName": "${productName}",
      "deleteAppDataOnUninstall": true
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Christopher1120/Erossential.git"
  },
  "bugs": {
    "url": "https://github.com/Christopher1120/Erossential/issues"
  },
  "homepage": "https://github.com/Christopher1120/Erossential#readme"
}
