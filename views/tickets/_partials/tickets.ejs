<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta lang="en">

        </head>

<body>



<table class="table text-center">
<% ticket.forEach((ticket)=> {%>
<% ticket.createdBy.forEach((user)=> {%>
<tr>
<% if (user.name == currentUser.full) {%>
<td><a href="/issue/view-ticket/<%-ticket.ident%>" onclick="Create(this)" data-bs-toggle="modal" data-bs-target="modal"><%- ticket.ident %></a></td>
<td><%- ticket.issue %></td>
<td><%- ticket.status %></td>
<% } else if (currentUser.role == "Admin" && ticket.status != "Resolved") { %>
<td><a href="/issue/view-ticket/<%-ticket.ident%>" onclick="Create(this)" data-bs-toggle="modal" data-bs-target="modal"><%- ticket.ident %></a></td>
<td><%- ticket.issue %></td>
<td><%- ticket.status %></td>
<% } %>
</tr>
<% }) %>
<% }) %>