<script>

$("#endbatch").on("click",function(event){
    event.preventDefault();
    var href = $("#endbatch").prop("href");
    var conf = confirm("Are you sure you want to end the current active batch?");
    
    if (conf == true) {
        $.ajax({
            type:"GET",
            url:href,
            success:function(e) {
                var x = document.getElementById("snackbar");
                x.innerHTML = e;
                x.className = "show";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
                console.log(href);
            },
            error:function(e) {
                var x = document.getElementById("snackbar");
                x.innerHTML = e.responseText;
                x.className = "show";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
            }
        })
    } else {
        alert("Ending of batch canceled!");
    }

})

$("#pos").on("click",function(e) {
    e.preventDefault();
    window.open("/pos","MyWindow","width=1500,height=750","config='toolbar=false, menubar=false,scrollbars=no,resizable=no,location=no,directories=no,status=no,searchbar=no'");
})
function Click() {
    var xhttp = new XMLHttpRequest();
    xhttp.onload = function() {
        document.getElementById("frame").innerHTML = this.responseText;
    }
    xhttp.open("GET", "/register");
    xhttp.send();
}

</script>